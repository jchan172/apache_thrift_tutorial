import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

from addressbook import AddressBook
from addressbook.ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  string getPerson(i32 id)'
  print '  string addPerson(Person person)'
  print '  string listAll(string contacts_list)'
  print '  string saveContacts(ContactsList contacts, string filename)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = AddressBook.Client(protocol)
transport.open()

if cmd == 'getPerson':
  if len(args) != 1:
    print 'getPerson requires 1 args'
    sys.exit(1)
  pp.pprint(client.getPerson(eval(args[0]),))

elif cmd == 'addPerson':
  if len(args) != 1:
    print 'addPerson requires 1 args'
    sys.exit(1)
  pp.pprint(client.addPerson(eval(args[0]),))

elif cmd == 'listAll':
  if len(args) != 1:
    print 'listAll requires 1 args'
    sys.exit(1)
  pp.pprint(client.listAll(args[0],))

elif cmd == 'saveContacts':
  if len(args) != 2:
    print 'saveContacts requires 2 args'
    sys.exit(1)
  pp.pprint(client.saveContacts(eval(args[0]),args[1],))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
